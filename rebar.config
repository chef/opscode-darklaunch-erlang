%% -*- mode: erlang -*-
%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et
{erl_opts, [debug_info, warnings_as_errors]}.

{deps, [
        %% ejson for JSON and header parsing
        {ejson, "0.1.0", {git,"http://github.com/kevsmith/ejson.git",
                          {tag, "0.1"}}},
        %% Mocking lib
        {meck, ".*", {git, "git://github.com/eproxus/meck.git", "HEAD"}},

        %% REST framework
        {webmachine, ".*",
         {git, "git://github.com/basho/webmachine", {tag, "1.9.0-mochifix"}}}
        ]}.

{eunit_opts,
 [verbose,
  {report,{eunit_surefire,[{dir,"."}]}}]}.
{cover_enabled, true}.
